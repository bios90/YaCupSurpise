<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TVReg">
        <item name="android:hyphenationFrequency">none</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mono_reg</item>
    </style>

    <style name="TVReg.Xs" parent="TVReg">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TVReg.S" parent="TVReg">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TVReg.M" parent="TVReg">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TVReg.L" parent="TVReg">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TVReg.Xl" parent="TVReg">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TVReg.Xxl" parent="TVReg">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TVReg.ExtraLarge" parent="TVReg">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.WhiteNavBar" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent
        </item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
